{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Fetch pairings",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["scripts/fetch_pairings_api.py"],
      "problemMatcher": []
    },
    {
      "label": "Filter results by archetype",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["scripts/filter_pairings_by_archetype.py"],
      "problemMatcher": []
    },
    {
      "label": "Create matchups",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["scripts/create_matchups_files.py"],
      "problemMatcher": []
    },
    {
      "label": "Aggregate stats",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["scripts/create_aggregate_stats.py"],
      "problemMatcher": []
    },
    {
      "label": "Win matrix CSV",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["scripts/create_win_matrix.py"],
      "problemMatcher": []
    },
    {
      "label": "Win matrix heatmap",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["scripts/create_win_matrix_heatmap.py"],
      "problemMatcher": []
    },
    {
      "label": "Run full pipeline",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-c", "import subprocess; cmds=['scripts/fetch_pairings_api.py','scripts/filter_pairings_by_archetype.py','scripts/create_matchups_files.py','scripts/create_aggregate_stats.py','scripts/create_win_matrix.py','scripts/create_win_matrix_heatmap.py']; [subprocess.check_call(['${workspaceFolder}/.venv/Scripts/python.exe', c]) for c in cmds]"]
    }
  ]
}
